@model LoginViewModel

<div class="middle-box text-center loginscreen animated fadeInDown">
    <div>
        <div>
            <img src="~/layout/icon/android-chrome-512x512.png" width="300" />
        </div>
        <div>
            <partial name="_ValidationSummary" />
        </div>
        @if (Model.EnableLocalLogin)
        {
            <form class="m-t" role="form" asp-route="Login">
                <input type="hidden" asp-for="ReturnUrl" />

                <div class="form-group"> 
                    <input type="email" class="form-control" placeholder="Username" asp-for="Username" autocomplete="off" autofocus />
                </div>

                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off" />
                </div>

                <button name="button" class="btn btn-primary block full-width m-b" value="login">Login</button>

                <a asp-action="ForgotPassword"><small>Forgot password?</small></a>
            </form>
        }
    </div>
</div>

